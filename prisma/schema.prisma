generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model InventoryItem {
  id              Int       @id @default(autoincrement())
  itemName        String
  sellingPrice    Float
  currentQuantity Int       @default(0)
  unitType        String?
  expiryDate      DateTime?
  status          String    @default("not yet") // checked, updated, not yet
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
